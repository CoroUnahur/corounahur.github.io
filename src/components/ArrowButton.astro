---
import Arrow from "@/icons/Arrow.astro";

const { direction, id } = Astro.props;

const directions = {
  left: "-rotate-90",
  right: "rotate-90",
  up: "rotate-180",
  down: "rotate-0",
};
---

<button
  class:list={[
    "border-cinder-600 border-2 p-1 py-4 rounded-full enabled:hover:scale-110 transition-all enabled:active:scale-100",
    directions[direction],
  ]}
  id={id}
  aria-label="Ir al siguiente elemento"
>
  <Arrow />
</button>

<style>
  .disabledButton {
    pointer-events: none;
    opacity: 0.5;
  }
</style>
