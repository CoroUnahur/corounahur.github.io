---
import { Location, Time } from "@/icons/index.astro";

const { image, titulo, fecha, hora, lugar, calle } = Astro.props;
---

<article class="rounded-lg border-2 border-apple-500 flex flex-col max-w-96">
  <header class="row-span-1 relative">
    <img src={image} class="rounded-t-md w-full h-full object-cover" />
    <div
      class="absolute inset-0 bg-gradient-to-t from-cinder-950 to-transparent rounded-t-md"
    >
    </div>
  </header>
  <footer class="row-span-1 text-zircon-50 p-4 flex flex-col gap-1">
    <h3 class="text-2xl font-bold">{titulo}</h3>
    <p class="font-bold text-xl">{fecha}</p>
    <div class="flex gap-2 items-center">
      <Time />
      <p class="flex font-semibold">{hora}</p>
    </div>
    <div class="flex gap-2 items-center">
      <Location />
      <div class="font-semibold">
        <p>{lugar}</p>
        <p>{calle}</p>
      </div>
    </div>
  </footer>
</article>
