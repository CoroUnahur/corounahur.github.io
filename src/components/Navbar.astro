---
import { menuItems } from "@/utils/data";
import SocialMedia from "./SocialMedia.astro";
import { Menu } from "../icons/index.astro";

const props = Astro.props;
---

<div class="w-full flex justify-center">
  <img
    id="logo"
    src="LOGO_UNAHUR.webp"
    alt="Logo del coro de la Universidad Nacional de Hurlingham"
    class="fixed z-50 top-3 m-auto w-16 h-14"
  />
</div>

<nav
  id="navbar"
  class:list={[
    "bg-cinder-950 rounded-b-lg flex flex-row justify-end py-4 laptop:px-12 px-6 fixed top-0 left-0 right-0 w-full -translate-y-full items-center",
    props.class,
  ]}
>
  <div class="laptop:hidden relative"><Menu /></div>
  <div class="laptop:flex flex-row gap-4 text-zircon-50 hidden">
    {
      menuItems.map((item) => (
        <a href={item.href} class="hover:text-zircon-200">
          {item.name}
        </a>
      ))
    }
    <SocialMedia />
  </div>
</nav>

<style>
  #logo {
    animation: traslateLogo auto linear;
    animation-timeline: scroll(root block);
  }
  #navbar {
    animation: downNavbar auto linear;
    animation-timeline: scroll(root block);
  }

  @keyframes traslateLogo {
    7% {
      transform: translateY(0);
      scale: 1;
    }
    10% {
      transform: translateX(-300%);
      scale: 0.7;
    }
    100% {
      transform: translateX(-300%);
      scale: 0.7;
    }
  }

  @keyframes downNavbar {
    7% {
      transform: translateY(-100%);
    }
    10% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(0);
    }
  }
</style>

