---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Web del Coro de la Universidad Nacional de Hurlingham"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Coro UNAHUR {title ?? " - " + title}</title>
  </head>
  <body class="bg-cinder-950">
    <slot />

    <script src="node_modules/flowbite/dist/flowbite.min.js"></script>
  </body>
</html>
<style is:global>
  html {
    scroll-behavior: smooth;
    font-family:
      Roboto,
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif sans-serif;
  }
  body {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    width: 100vw;
    justify-items: center;
    overflow-y: scroll;
    overflow-x: hidden;
    scroll-snap-type: y mandatory;
  }

  body::-webkit-scrollbar {
    display: none;
  }
  html {
    scroll-behavior: smooth;
    max-width: 100vw;
    overflow-x: hidden;
  }
</style>
