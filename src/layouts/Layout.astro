---
import Footer from "@/components/Footer.astro";
import Hero from "@/sections/Hero.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Web del Coro de la Universidad Nacional de Hurlingham"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-cinder-950">
    <Hero />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  html {
    scroll-behavior: smooth;
    font-family:
      Roboto,
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif sans-serif;
  }
  body {
    display: grid;
    min-height: 100dvh;
    grid-template-rows: auto 1fr auto;
  }

  main {
    overflow-y: scroll;
    scroll-snap-type: y mandatory;
  }
  main > section {
    height: 100dvh;
    scroll-snap-align: start;
    scroll-snap-stop: always;
  }

  main > section:nth-child(even) {
    background-color: #504a5a;
  }
</style>
