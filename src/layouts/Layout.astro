    --color-apple-800: #2d5420;
    --color-apple-900: #28481f;
    --color-apple-950: #12270c;

    --color-greenPea-50: #f1f8f4;
    --color-greenPea-100: #deeee2;
    --color-greenPea-200: #bedcc9;
    --color-greenPea-300: #92c3a8;
    --color-greenPea-400: #63a481;
    --color-greenPea-500: #428765;
    --color-greenPea-600: #306b4f;
    --color-greenPea-700: #285943;
    --color-greenPea-800: #204534;
    --color-greenPea-900: #1b392c;
    --color-greenPea-950: #0e2018;

    --color-cerulean-50: #edfcfe;
    --color-cerulean-100: #d1f5fc;
    --color-cerulean-200: #a8ebf9;
    --color-cerulean-300: #6ddcf3;
    --color-cerulean-400: #2ac2e6;
    --color-cerulean-500: #0ea6cd;
    --color-cerulean-600: #0f84ab;
