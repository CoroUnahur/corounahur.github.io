    --color-text: var(--color-zircon-50);
    --color-text-secondary: var(--color-greenPea-950);

    --color-primary: var(--color-apple-300);
    --color-primary-hover: var(--color-apple-400);

    --color-secondary: var(--color-cerulean-500);
    --color-secondary-hover: var(--color-cerulean-600);
  }

  html {
    scroll-behavior: smooth;
    font-family:
      Roboto,
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif sans-serif;
  }

  body {
    color: var(--color-text);
    background-color: var(--color-bg);
    display: flex;
    flex-direction: column;
    width: 100%;
    justify-items: center;
  }

  body::-webkit-scrollbar {
    display: none;
  }
</style>
