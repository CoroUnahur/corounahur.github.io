---
import { images } from "@/utils/data";
import "photoswipe/style.css";
---

<section
  id="galeria"
  class="relative h-auto w-auto p-5 bg-cinder-950 justify-center items-center flex flex-col"
>
  <h2 class="text-zircon-50 text-4xl font-semibold">Galeria</h2>
  <article
    class="columns-2 h-auto laptop:columns-6 gap-4 py-10 laptop:py-5"
    id="galeria"
  >
    {
      images.map(({ src, width, height, description }) => (
        <a
          href={src}
          data-pswp-width={width}
          data-pswp-height={height}
          target="_blank"
          class="relative block group"
        >
          <img class="rounded-xl w-full mb-3" src={src} alt="" />
        </a>
      ))
    }
  </article>
</section>

<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";
  import "photoswipe/style.css";

  const lightbox = new PhotoSwipeLightbox({
    gallery: "#gallery",
    children: "a",
    bgClickAction: "close",
    tapAction: "close",
    doubleTapAction: false,
    pswpModule: () => import("photoswipe"),
  });

  lightbox.init();
</script>
